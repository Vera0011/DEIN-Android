<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignBounds"
    android:columnCount="4"
    android:rowCount="4">

    <TextView
        android:id="@+id/pad_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="0"
        android:layout_row="0"
        android:text="7" />

    <TextView
        android:id="@+id/pad_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="1"
        android:layout_row="0"
        android:text="8" />

    <TextView
        android:id="@+id/pad_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="2"
        android:layout_row="0"
        android:text="9" />

    <TextView
        android:id="@+id/pad_."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="0"
        android:layout_row="3"
        android:text="." />

    <TextView
        android:id="@+id/pad_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="0"
        android:layout_row="1"
        android:text="4" />

    <TextView
        android:id="@+id/pad_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="1"
        android:layout_row="1"
        android:text="5" />

    <TextView
        android:id="@+id/pad_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="2"
        android:layout_row="1"
        android:text="6" />

    <TextView
        android:id="@+id/pad_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="1"
        android:layout_row="3"
        android:text="0" />

    <TextView
        android:id="@+id/pad_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="0"
        android:layout_row="2"
        android:text="1" />

    <TextView
        android:id="@+id/pad_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="1"
        android:layout_row="2"
        android:text="2" />

    <TextView
        android:id="@+id/pad_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="2"
        android:layout_row="2"
        android:text="3" />

    <TextView
        android:id="@+id/pad_equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="2"
        android:layout_row="3"
        android:text="=" />

    <TextView
        android:id="@+id/pad_divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_column="3"
        android:layout_row="0"
        android:layout_gravity="fill_horizontal"
        android:text="/" />

    <TextView
        android:id="@+id/pad_multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_column="3"
        android:layout_row="1"
        android:layout_gravity="fill_horizontal"
        android:text="*" />

    <TextView
        android:id="@+id/pad_substract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_column="3"
        android:layout_row="2"
        android:layout_gravity="fill_horizontal"
        android:text="-" />

    <TextView
        android:id="@+id/pad_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_column="3"
        android:layout_row="3"
        android:layout_gravity="fill_horizontal"
        android:text="+" />
</GridLayout>
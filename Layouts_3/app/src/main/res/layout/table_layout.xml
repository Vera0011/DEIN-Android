<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp"
    android:stretchColumns="1">

    <TableRow android:background="#128675">

        <TextView
            android:id="@+id/v1"
            android:layout_column="0"
            android:padding="3dip"
            android:text="Producto"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/v2"
            android:layout_column="2"
            android:padding="3dip"
            android:text="Subtotal"
            android:textColor="@color/white" />

    </TableRow>

    <TableRow android:background="#dddddd">

        <TextView
            android:id="@+id/v3"
            android:layout_column="0"
            android:padding="3dip"
            android:text="Jabón de manos x 1"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/v4"
            android:layout_column="2"
            android:padding="3dip"
            android:text="2€"
            android:textColor="@color/black" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/v5"
            android:layout_column="0"
            android:padding="3dip"
            android:text="Shampoo Alpecin x 1"
            android:textColor="#30abd6" />

        <TextView
            android:id="@+id/v6"
            android:layout_column="2"
            android:padding="3dip"
            android:text="18€"
            android:textColor="#30abd6" />
    </TableRow>

    <TableRow android:background="#dddddd">

        <TextView
            android:id="@+id/v7"
            android:layout_column="0"
            android:padding="3dip"
            android:text="Pastas Layana x 2"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/v8"
            android:layout_column="2"
            android:padding="3dip"
            android:text="18€"
            android:textColor="@color/black" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/v9"
            android:layout_column="0"
            android:padding="3dip"
            android:text="Detergente Tucolor x 1"
            android:textColor="#ce0a0a" />

        <TextView
            android:id="@+id/v10"
            android:layout_column="2"
            android:padding="3dip"
            android:text="13,4€"
            android:textColor="#ce0a0a" />

    </TableRow>

    <TableRow>

        <View
            android:id="@+id/view3"
            android:layout_height="2dip"
            android:layout_span="3"
            android:background="#FF909090"
            android:padding="3dip" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/textView12"
            android:layout_column="1"
            android:padding="3dip"
            android:text="Subtotal"
            android:textColor="#128675" />

        <TextView
            android:id="@+id/textView13"
            android:layout_column="2"
            android:padding="3dip"
            android:text="43,4€"
            android:textColor="@color/black" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/textView14"
            android:layout_column="1"
            android:padding="3dip"
            android:text="Costo envío"
            android:textColor="#128675" />

        <TextView
            android:id="@+id/textView15"
            android:layout_column="2"
            android:padding="3dip"
            android:text="10€"
            android:textColor="@color/black" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/textView16"
            android:layout_column="1"
            android:padding="3dip"
            android:text="Cupón"
            android:textColor="#128675" />

        <TextView
            android:id="@+id/textView17"
            android:layout_column="2"
            android:padding="3dip"
            android:text="-5€"
            android:textColor="@color/black" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/textView18"
            android:layout_column="1"
            android:padding="3dip"
            android:text="Total"
            android:textColor="#128675" />

        <TextView
            android:id="@+id/textView19"
            android:layout_column="2"
            android:padding="3dip"
            android:text="48,4€"
            android:textColor="@color/black" />
    </TableRow>

</TableLayout>